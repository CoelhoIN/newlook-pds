generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  costumers Costumer[]
  employees Employee[]
}

model Costumer {
  id       Int       @id @default(autoincrement())
  name     String
  phone    String
  userId   Int
  user     User      @relation(fields: [userId], references: [id])
  bookings Booking[]
}

model Employee {
  id        Int       @id @default(autoincrement())
  name      String
  serviceId Int
  userId    Int
  status    String
  type      String
  user      User      @relation(fields: [userId], references: [id])
  service   Service   @relation(fields: [serviceId], references: [id])
  bookings  Booking[]
}

model Service {
  id              Int              @id @default(autoincrement())
  name            String
  category        String
  price           Decimal          @db.Decimal(10, 2)
  employees       Employee[]
  bookingServices BookingService[]
}

model Booking {
  id              Int              @id @default(autoincrement())
  userId          Int
  employeeId      Int
  date            DateTime
  costumer        Costumer         @relation(fields: [userId], references: [id])
  employee        Employee         @relation(fields: [employeeId], references: [id])
  bookingServices BookingService[]
}

model BookingService {
  bookingId Int
  serviceId Int
  price     Decimal @db.Decimal(10, 2)
  booking   Booking @relation(fields: [bookingId], references: [id])
  service   Service @relation(fields: [serviceId], references: [id])

  @@id([bookingId, serviceId])
}
